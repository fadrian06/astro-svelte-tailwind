---
import "@/styles/global.tailwind.css";

interface Props {
	title?: string;
}
---

<!doctype html>
<html>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<base href={`${import.meta.env.BASE_URL}`} />
		<link rel="icon" href="./favicon.svg" />
		<title>{Astro.props.title || "Astro Basics"}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		height: 100%;
	}
</style>
